<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">

    <xacro:property name="wheel_radius" value="0.05" /> 
    <xacro:property name="wheel_length" value="0.04" /> 
    <xacro:property name="wheel_mass" value="0.1" /> 

    <link name="base_link">
      <visual>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <geometry>
          <box size="0.4 0.3 0.1"/>
        </geometry>
        <material name="blue">
          <color rgba="0.0 0.0 0.8 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <geometry>
          <box size="0.4 0.3 0.1"/>
        </geometry>
      </collision>

      <inertial>
          <mass value="5.0"/>
          <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
      </inertial>
    </link>


    <xacro:macro name="wheel_macro" params="prefix reflect">
        <link name="${prefix}_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
                <material name="grey">
                    <color rgba="0.5 0.5 0.5 1.0" />
                </material>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
            </collision>

            <inertial>
                <mass value="${wheel_mass}"/>
                <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
            </inertial>
         </link>


        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${prefix}_wheel_link"/>
            <origin xyz="0 ${reflect*0.17} 0" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>


    <xacro:wheel_macro prefix="right" reflect="1" />
    <xacro:wheel_macro prefix="left" reflect="-1" />

    <link name="caster_wheel_front_link">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.05"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="caster_wheel_front_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel_front_link"/>
        <origin xyz="-0.15 0 0"/>
    </joint>


    <link name="caster_wheel_back_link">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.05"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="caster_wheel_back_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel_back_link"/>
        <origin xyz="0.15 0 0"/>
    </joint>

</robot>